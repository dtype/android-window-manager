<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:id="@+id/linear"
            android:background="@drawable/back">

                <TextView
                    android:layout_width="245dp"
                    android:layout_height="28dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Goodmorning sir，i am pet！ "
                    android:id="@+id/desktoppet_text_medium"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#000000"
                    android:layout_marginTop="2dp"
                    android:background="#55111111" />

                <TextView
                    android:layout_width="245dp"
                    android:layout_height="45dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="i will join you when you are bored !"
                    android:id="@+id/desktoppet_text_small"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="#33000000" />
        </LinearLayout>

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/desktop_pet_image"
            android:background="@drawable/blueqface_01"
            android:layout_gravity="center" />

</LinearLayout>